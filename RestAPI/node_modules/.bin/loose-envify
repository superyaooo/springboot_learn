#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../loose-envify/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../loose-envify/cli.js" "$@"
  ret=$?
fi
exit $ret
